  <!-- Card -->
<div class="container index-page">
  <div class="container title-index">
    <h1>All Cocktails Recipes</h1>
    <p>Find your perfect cocktail for tonight</p>
  </div>
  <div class="cards-box">
    <div class="cards" >
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill unless cocktail.photo.blank? %>')">
            <h3><%=cocktail.name%></h3>
          </div>
      <% end %>
     <% end %>
    </div>
  </div>
</div>


