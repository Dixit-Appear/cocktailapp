<div class="container">
  <%= link_to "< Back to Cocktail", cocktail_path(@cocktail), class: "back-to" %>
</div>
<div class="container new-cocktail">
  <div class="d-flex justify-content-center form-image">
    <div class="form">
      <h3>Add Ingredient and description for <%=@cocktail.name%></h3>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Add", class: "btn btn-form" %>
      <% end %>
    </div>
    <div class="image-form">
      <%= image_tag "image-form.png", class: "image-new-form", width: "500"%>
    </div>
  </div>
